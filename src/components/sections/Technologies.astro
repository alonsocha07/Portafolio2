---
import TechLogoMd from "../TechLogoMd.astro";

---



<section id="Technologies" class="w-auto  bg-white dark:bg-background rounded-2xl mt-6 p-5 shadow-sectionShadow dark:shadow-dark-sectionShadow">
    <div>
        <h3 class="text-3xl font-medium mb-4 dark:text-white">Technologies</h3>
        <h3 class="text-xl font-semibold text-primary ">FrontEnd</h3>
        <div class="grid grid-cols-3 grid-flow-row gap-4 py-4 max-[550px]:grid-cols-2" >
            <TechLogoMd src="../../public/Assets/technologies/html5.svg" name="HTML"/>
            <TechLogoMd src="../../public/Assets/technologies/css.svg" name="CSS"/>
            <TechLogoMd src="../../public/Assets/technologies/javascript.svg" name="JavaScript"/>
            <TechLogoMd src="../../public/Assets/technologies/react.svg" name="React"/>
            <TechLogoMd src="../../public/Assets/technologies/vue.svg" name="Vue"/>
            <TechLogoMd src="../../public/Assets/technologies/tailwindcss.svg" name="Tailwind"/>
            <TechLogoMd src="../../public/Assets/technologies/bootstrap.svg" name="Bootstrap"/>
            <TechLogoMd src="../../public/Assets/technologies/astro_dark.svg" name="Astro"/>
            <TechLogoMd src="../../public/Assets/technologies/sass.svg" name="SASS"/>
        </div>
        <h3 class="text-xl font-semibold text-primary ">BackEnd</h3>
        <div class="grid grid-cols-3 grid-flow-row gap-4 py-4 max-[550px]:grid-cols-2" >
            <TechLogoMd src="../../public/Assets/technologies/net.png" name=".NET"/>
            <TechLogoMd src="../../public/Assets/technologies/sql.png" name="SQL"/>
            <TechLogoMd src="../../public/Assets/technologies/oracle.png" name="Oracle"/>
            <TechLogoMd src="../../public/Assets/technologies/firebase.png" name="Firebase"/>
            <TechLogoMd src="../../public/Assets/technologies/cshare.png" name="C#"/>
            <TechLogoMd src="../../public/Assets/technologies/java.png" name="Java"/>
            
        </div>
        <h3 class="text-xl font-semibold text-primary ">Others</h3>
        <div class="grid grid-cols-3 grid-flow-row gap-4 py-4 max-[550px]:grid-cols-2" >
            <TechLogoMd src="../../public/Assets/technologies/github.svg" name="GitHub"/>
            <TechLogoMd src="../../public/Assets/technologies/figma.svg" name="Figma"/>
            <TechLogoMd src="../../public/Assets/technologies/azure-devops.png" name="Azure Devops"/>
            <TechLogoMd src="../../public/Assets/technologies/flutterflow.png" name="Flutterflow"/>
            <TechLogoMd src="../../public/Assets/technologies/jira.svg" name="Jira"/>
        </div>
    </div>
</section>